<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/imgInFullInfo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/picture_load"
            android:src="@drawable/pic_loading"
            style="@style/imagePeople">
        </ImageView>

        <TextView
            android:id="@+id/nameInFullInfo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape_background_brief"
            android:layout_marginTop="20dp"
            android:text="@string/text_loading"
            android:gravity="start|center"
            android:paddingHorizontal="30dp"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/fullInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_background_brief"
        android:text="@string/text_loading"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_weight="1">
    </TextView>

    <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnBack"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="20dp"
    android:text="@string/back"
    android:background="@drawable/shape_btn_update"/>
</LinearLayout>